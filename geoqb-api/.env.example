# Application
APP_NAME=GeoQB API
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True

# API
API_V1_PREFIX=/api/v1
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql://geoqb:geoqb_password@localhost:5432/geoqb
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Email
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@geoqb.io
SUPPORT_EMAIL=support@geoqb.io

# TigerGraph
TIGERGRAPH_HOST=your-tigergraph-host
TIGERGRAPH_USERNAME=tigergraph
TIGERGRAPH_PASSWORD=your-tigergraph-password
TIGERGRAPH_GRAPHNAME=GeoQB

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Frontend
FRONTEND_URL=http://localhost:3000

# CORS
CORS_ORIGINS=["http://localhost:3000","https://geoqb.io"]

# Usage Limits
FREE_PLAN_LAYER_LIMIT=5
FREE_PLAN_QUERY_LIMIT=100
PROFESSIONAL_PLAN_LAYER_LIMIT=50
PROFESSIONAL_PLAN_QUERY_LIMIT=10000
